<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activities.logged.SolicitationHistoryReproved">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo_fk_2015" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginTop="146dp"
            android:background="#65C734"
            android:theme="?attr/actionBarTheme" >

            <TextView
                android:id="@+id/txtMenuAprovReprov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnHistBackSolicit_Reproved"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="#65C734"
                android:src="@drawable/btn_back_left"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:textColor="#FFFFFF" />

            <ImageButton
                android:id="@+id/btnHistBackSolicit"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="#65C734"
                android:src="@drawable/btn_back"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:textColor="#FFFFFF" />

            </RelativeLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHistorySolicitation"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="85dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/toolbar"
            android:layout_alignBottom="@id/sicredi_2"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />

        <ProgressBar
            android:id="@+id/progressBarHistory"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="320dp"
            style="?android:attr/progressBarStyle"
            android:layout_width="100dp"
            android:layout_centerInParent="true"
            android:layout_height="100dp" />

        <ImageView
            android:id="@+id/sicredi_2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
</LinearLayout>
