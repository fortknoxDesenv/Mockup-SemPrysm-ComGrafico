<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/cameraHeader"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/userIdBackBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:id="@+id/userIdInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Light"
                android:gravity="center"
                android:layout_centerInParent="true"

                style="@style/Subtitle1"
                android:fontFamily="@font/nunito_bold"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Light"
                android:lineSpacingExtra="8sp"

                android:layout_gravity="center"
                style="@style/H5"
                android:layout_marginTop="68dp"
                />

            <EditText
                android:id="@+id/userIdInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:digits="0123456789"
                android:layout_centerInParent="true"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/white"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:textCursorDrawable="@color/Light"
                android:inputType="number"
                android:textColorHint="@android:color/darker_gray"
                android:gravity="center"
                android:layout_marginTop="86dp"
                style="@style/H4"
                android:imeOptions="actionDone"
                android:maxLength="10"
                android:textAlignment="center"
                android:cursorVisible="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/looksGoodBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button"
                android:layout_gravity="center"
                android:text="@string/idscan_result_button"
                android:background="@drawable/black_button_rounded_bg"
                android:backgroundTint="@color/Accent"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:textColor="@color/Text_1"
                />


        </LinearLayout>

    </FrameLayout>



</LinearLayout>