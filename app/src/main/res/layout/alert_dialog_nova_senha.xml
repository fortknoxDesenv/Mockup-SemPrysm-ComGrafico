<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#d3d3d3"
    >

    <TextView
        android:id="@+id/txtCadastroSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="CADASTRE UMA NOVA SENHA"
        android:textAlignment="center"
        android:textSize="16dp"
         android:textColor="@color/blackText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtNovaSenha"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="35dp"
        android:hint="NOVA SENHA"
        android:text=""
         android:textColor="@color/blackText"
        android:textAlignment="center"
        android:textSize="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCadastroSenha"
        />

    <EditText
        android:id="@+id/txtRepitaNovaSenha"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:hint="REPITA NOVA SENHA"
         android:layout_marginBottom="30dp"
         android:textColor="@color/blackText"
        android:text=""
        android:textAlignment="center"
        android:textSize="16dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtNovaSenha"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/txtRepitaNovaSenha"
        ></ImageView>


</androidx.constraintlayout.widget.ConstraintLayout>

